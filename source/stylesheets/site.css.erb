@charset "utf-8";

html {
  font-size: 24px;
}

body {
  background: #F7F7F7;
  color: #3E3F41;
  max-width: 768px;
  margin: auto;
  padding: 0 20px;
  font-family: 'Open Sans', sans-serif;
  font-size: 0.8rem;
  line-height: 1.8em;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Patua One', serif;
}

h1 {
  margin-top: 0em;
  margin-bottom: 0.2em;
  font-size: 1.8rem;
  color: #2C2918;
  line-height: 1.2em;
}

h2 {
  margin-top: 0.8em;
  margin-bottom: 0.5em;
  font-size: 1.5rem;
  color: #2C2918;
}

h6 {
  margin-top: 0em;
  margin-bottom: 0em;
  text-align: right;
}

h6 a {
  color: #ccc;
}

p {
  margin-top: 0em;
}

.fa {
  color: #3E3F41;
}

dt .fa:before {
  padding-left: 1.9rem;
}

dt {
  font-family: 'Patua One', serif;
  font-size: 1.2rem;
  padding-left: 1.9rem;
  text-indent: -1.9rem;
}

dd {
  margin-top: 0.3em;
  margin-bottom: 1.6em;
  margin-left: 2.4em;
  font-size: 0.8rem;
}

ul.profiles {
  list-style: none;
  padding-left: 0;
}

ul.profiles li {
  font-size: 1.0rem;
  margin-bottom: 0.4em;
}

a {
  color: #006600;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.embed-container {
  position: relative;
  padding-bottom: 56.25%;
  height: 0;
  overflow: hidden;
  max-width: 100%;
}

// For Vimeo videos
// http://embedresponsively.com
.embed-container iframe, .embed-container object, .embed-container embed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.embed-container {
  margin-top: 0.8em;
  margin-bottom: 0.8em;
}

body > code, li > code, p > code {
  background: #ddd;
  padding-left: 0.2em;
  padding-right: 0.2em;
}

<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>

pre {
  font-size: 0.9em;
  padding: 0.5em;
  word-break: break-all;
  white-space: pre-wrap;       /* css-3 */
  white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
  white-space: -pre-wrap;      /* Opera 4-6 */
  white-space: -o-pre-wrap;    /* Opera 7 */
  word-wrap: break-word;       /* Internet Explorer 5.5+ */
}

